{
  "compilerOptions": {
      "moduleResolution": "node",
      "target": "es2015",
      "module": "commonjs",
      "sourceMap": false,
      "declaration": true,
      "declarationDir": "@types",
      "emitDeclarationOnly": true,
      "esModuleInterop": true
  },
  "include": [
      "./src/**/*"
  ],
  "exclude": [
      "node_modules",
      "./tests/**/*",
      "./@types/**/*"
  ]
}
